<h1>Task List</h1>

<%= link_to  "Create Task", new_task_path %>

<table>
  <thead>
    <tr>
      <td>id</td>
      <td>Title</td>
      <td>Content</td>
      <td>Process</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
       <td>
         <%= link_to  "Edit",  edit_task_path(task) %>
         <%= link_to  "Destroy",  task_path(task), method: "delete", data: { confirm: "Are you sure?" } %>
       </td>
    </tr>
    <% end %>
  </tbody>
</table>
